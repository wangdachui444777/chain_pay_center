<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.blockchain.mapper.PlatformsMapper">
    
    <resultMap type="Platforms" id="PlatformsResult">
        <result property="id"    column="id"    />
        <result property="platformName"    column="platform_name"    />
        <result property="secretKey"    column="secret_key"    />
        <result property="apiKey"    column="api_key"    />
        <result property="callbackUrl"    column="callback_url"    />
        <result property="withdrawUrl"    column="withdraw_url"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPlatformsVo">
        select id, platform_name, secret_key, api_key, callback_url,withdraw_url, status, create_by, update_by, create_time, update_time from bc_platforms
    </sql>

    <select id="selectPlatformsList" parameterType="Platforms" resultMap="PlatformsResult">
        <include refid="selectPlatformsVo"/>
        <where>  
            <if test="platformName != null  and platformName != ''"> and platform_name like concat('%', #{platformName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="getPlatformsAll"  resultMap="PlatformsResult">
        <include refid="selectPlatformsVo"/>
    </select>
    
    <select id="selectPlatformsById" parameterType="Long" resultMap="PlatformsResult">
        <include refid="selectPlatformsVo"/>
        where id = #{id}
    </select>

    <insert id="insertPlatforms" parameterType="Platforms" useGeneratedKeys="true" keyProperty="id">
        insert into bc_platforms
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="platformName != null and platformName != ''">platform_name,</if>
            <if test="secretKey != null and secretKey != ''">secret_key,</if>
            <if test="apiKey != null">api_key,</if>
            <if test="callbackUrl != null">callback_url,</if>
            <if test="withdrawUrl != null">withdraw_url,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="platformName != null and platformName != ''">#{platformName},</if>
            <if test="secretKey != null and secretKey != ''">#{secretKey},</if>
            <if test="apiKey != null">#{apiKey},</if>
            <if test="callbackUrl != null">#{callbackUrl},</if>
            <if test="withdrawUrl != null">#{withdrawUrl},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePlatforms" parameterType="Platforms">
        update bc_platforms
        <trim prefix="SET" suffixOverrides=",">
            <if test="platformName != null and platformName != ''">platform_name = #{platformName},</if>
            <if test="callbackUrl != null">callback_url = #{callbackUrl},</if>
            <if test="withdrawUrl != null">withdraw_url = #{withdrawUrl},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePlatformsById" parameterType="Long">
        delete from bc_platforms where id = #{id}
    </delete>

    <delete id="deletePlatformsByIds" parameterType="String">
        delete from bc_platforms where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>