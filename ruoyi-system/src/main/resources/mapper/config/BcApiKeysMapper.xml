<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.blockchain.mapper.BcApiKeysMapper">
    
    <resultMap type="BcApiKeys" id="BcApiKeysResult">
        <result property="id"    column="id"    />
        <result property="chainType"    column="chain_type"    />
        <result property="apiProvider"    column="api_provider"    />
        <result property="apiKey"    column="api_key"    />
        <result property="apiUrl"    column="api_url"    />
        <result property="dailyLimit"    column="daily_limit"    />
        <result property="usedCount"    column="used_count"    />
        <result property="priority"    column="priority"    />
        <result property="status"    column="status"    />
        <result property="lastUsedTime"    column="last_used_time"    />
        <result property="resetTime"    column="reset_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBcApiKeysVo">
        select id, chain_type, api_provider, api_key, api_url, daily_limit, used_count, priority, status, last_used_time, reset_time, create_time, update_time, remark from bc_api_keys
    </sql>

    <select id="selectBcApiKeysList" parameterType="BcApiKeys" resultMap="BcApiKeysResult">
        <include refid="selectBcApiKeysVo"/>
        <where>  
            <if test="chainType != null  and chainType != ''"> and chain_type = #{chainType}</if>
            <if test="apiProvider != null  and apiProvider != ''"> and api_provider = #{apiProvider}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBcApiKeysById" parameterType="Long" resultMap="BcApiKeysResult">
        <include refid="selectBcApiKeysVo"/>
        where id = #{id}
    </select>
    <select id="selectDailyCount"  resultMap="BcApiKeysResult">
        <include refid="selectBcApiKeysVo"/>
        where used_count >0 or status=2
    </select>


    <insert id="insertBcApiKeys" parameterType="BcApiKeys" useGeneratedKeys="true" keyProperty="id">
        insert into bc_api_keys
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="chainType != null and chainType != ''">chain_type,</if>
            <if test="apiProvider != null and apiProvider != ''">api_provider,</if>
            <if test="apiKey != null and apiKey != ''">api_key,</if>
            <if test="apiUrl != null">api_url,</if>
            <if test="dailyLimit != null">daily_limit,</if>
            <if test="usedCount != null">used_count,</if>
            <if test="priority != null">priority,</if>
            <if test="status != null">status,</if>
            <if test="lastUsedTime != null">last_used_time,</if>
            <if test="resetTime != null">reset_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="chainType != null and chainType != ''">#{chainType},</if>
            <if test="apiProvider != null and apiProvider != ''">#{apiProvider},</if>
            <if test="apiKey != null and apiKey != ''">#{apiKey},</if>
            <if test="apiUrl != null">#{apiUrl},</if>
            <if test="dailyLimit != null">#{dailyLimit},</if>
            <if test="usedCount != null">#{usedCount},</if>
            <if test="priority != null">#{priority},</if>
            <if test="status != null">#{status},</if>
            <if test="lastUsedTime != null">#{lastUsedTime},</if>
            <if test="resetTime != null">#{resetTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBcApiKeys" parameterType="BcApiKeys">
        update bc_api_keys
        <trim prefix="SET" suffixOverrides=",">
            <if test="chainType != null and chainType != ''">chain_type = #{chainType},</if>
            <if test="apiProvider != null and apiProvider != ''">api_provider = #{apiProvider},</if>
            <if test="apiKey != null and apiKey != ''">api_key = #{apiKey},</if>
            <if test="apiUrl != null">api_url = #{apiUrl},</if>
            <if test="dailyLimit != null">daily_limit = #{dailyLimit},</if>
            <if test="usedCount != null">used_count = #{usedCount},</if>
            <if test="priority != null">priority = #{priority},</if>
            <if test="status != null">status = #{status},</if>
            <if test="lastUsedTime != null">last_used_time = #{lastUsedTime},</if>
            <if test="resetTime != null">reset_time = #{resetTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>
    <update id="updateResetDailyCount">
        update bc_api_keys  set used_count=0,status=0,reset_time=now() where used_count >0 or status=2
    </update>

    <delete id="deleteBcApiKeysById" parameterType="Long">
        delete from bc_api_keys where id = #{id}
    </delete>

    <delete id="deleteBcApiKeysByIds" parameterType="String">
        delete from bc_api_keys where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>